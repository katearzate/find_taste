<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.findtaste.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchTypeFragment"
            app:destination="@id/searchTypeFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchTypeFragment"
        android:name="com.example.findtaste.fragments.SearchTypeFragment"
        android:label="fragment_search_type"
        tools:layout="@layout/fragment_search_type" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.findtaste.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.findtaste.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.findtaste.fragments.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
</navigation>